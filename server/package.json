{
  "name": "ever-life-vault-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc && npm run copy-files",
    "build:dev": "tsc --watch",
    "dev": "tsx index.ts",
    "copy-files": "copyfiles -u 0 config/**/* dist/ && copyfiles -u 0 utils/**/* dist/",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/etag": "^6.0.3",
    "@fastify/helmet": "^13.0.1",
    "@fastify/http-proxy": "^10.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@miketako3/cloki": "^0.1.16",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "vercel": {
    "functions": {
      "index.ts": {
        "maxDuration": 30
      }
    }
  }
}
